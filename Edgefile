FROM alpine

RUN apk update

RUN \
    apk add --no-cache \
    git \
    cmake \
    gcc \
    build-base \
    libtool \
    perl

RUN \
   git clone https://github.com/akermu/emacs-libvterm.git /tmp/emacs-libvterm && \
   mkdir -p /tmp/emacs-libvterm/build

WORKDIR /tmp/emacs-libvterm/build

RUN \
    cmake .. && \
    make
    
 